<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFCombat.Views.EnemyPage">
    <ContentPage.Content>
        <StackLayout>
            <Label FontSize="28"
               TextColor="DarkOrchid"
                   
               Text="{Binding Source={x:Reference EnemyHealth},
                Path=Text,
                StringFormat='Enemy Health:'}" 
               HorizontalOptions="Center"
               />

            <Entry FontSize="28"
                    Keyboard="Numeric"
                   x:Name="EnemyHealth"
                   HorizontalTextAlignment="Center"
                   Text="{Binding EnemyHealthValue}"></Entry>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>