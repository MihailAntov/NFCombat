<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFCombat.Views.EnemyPage">
    <ContentPage.Content>
        <StackLayout>

            
            <Picker x:Name="enemyPicker" Title="Select an enemy" ItemsSource="{Binding Fight.Enemies}" ItemDisplayBinding="{Binding Name}" SelectedIndex="{Binding SelectedEnemy}"/>

            
            <Label FontSize="28"
               TextColor="DarkOrchid"
                  
               Text="Name:" 
               HorizontalOptions="Center"
               />

            <Entry FontSize="28"
                   x:Name="EnemyName"
                   HorizontalTextAlignment="Center"
                   Text="{Binding EnemyName}"></Entry>
            <Label FontSize="28"
               TextColor="DarkOrchid"
                   
               Text="Enemy Health:" 
               HorizontalOptions="Center"
               />
            
            <Entry FontSize="28"
                    Keyboard="Numeric"
                   x:Name="EnemyHealth"
                   HorizontalTextAlignment="Center"
                   Text="{Binding EnemyHealth}"></Entry>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>