<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFCombat.Views.PlayerPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">

            <Label FontSize="28"
               TextColor="DarkOrchid"
                   
               Text="{Binding Source={x:Reference PlayerHealth},
                Path=Text,
                StringFormat='Player Health:'}" 
               HorizontalOptions="Center"
               />
            
            <Entry FontSize="28"
                    Keyboard="Numeric"
                   x:Name="PlayerHealth"
                   HorizontalTextAlignment="Center"
                   Text="{Binding PlayerHealthValue}"></Entry>

            

            


            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>