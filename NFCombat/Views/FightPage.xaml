<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="NFCombat.Views.FightPage">
    
    <ContentPage.Content>
        <StackLayout>

            <Label   Text="Enemies:"
               TextColor="DarkOrchid"
               FontSize="24"
               HorizontalOptions="Center"
                       
        />
            <Entry  Keyboard="Numeric" Text="{Binding EnemyCount}"
               x:Name="EnemyCountValue"
               TextColor="DarkOrchid"
               FontSize="36"
               HorizontalOptions="Center"
                       
        />
            <Grid>

                <Label Grid.Column="0" Grid.Row="2" Text="Player HP:"
               
               TextColor="DarkOrchid"
               FontSize="24"
               HorizontalOptions="Center"
        />
                <Label Grid.Column="0" Grid.Row="3" 
                       x:Name="PlayerHealth" 
                       Text="{Binding Fight.Player.Health}"
                       
               TextColor="DarkOrchid"
               FontSize="36"
               HorizontalOptions="Center"
        />

                
                
                <Label Grid.Column="1" Grid.Row="2"  Text="Enemy HP:"
               
               TextColor="DarkOrchid"
               FontSize="24"
               HorizontalOptions="Center"
                       
        />
                <Label Grid.Column="1" Grid.Row="3" Text="{Binding Fight.Enemy.Health}"
               x:Name="EnemyHealthValue"
               TextColor="DarkOrchid"
               FontSize="36"
               HorizontalOptions="Center"
                       
        />
            </Grid>

            <Label   Text="Range:"
               TextColor="DarkOrchid"
               FontSize="24"
               HorizontalOptions="Center"
                       
        />
            <Entry  Keyboard="Numeric" Text="{Binding Range}"
               x:Name="RangeValue"
               TextColor="DarkOrchid"
               FontSize="36"
               HorizontalOptions="Center"
                       
        />
            
            <Button Text="FIGHT"
                    TextColor="White"
                    
                    Clicked="FightClicked"
                    VerticalOptions="End"
                    FontSize="36"
                    />

            <!--<Label Text="Range:"/>
            <Slider x:Name="IncrementSlider"
                Margin="5,0"
                Maximum="10"
                Minimum="1"
                Value="{Binding SliderValue}"
                />

    <Button Text="Increment!"
                Clicked="IncrementCounterClicked"
                FontSize="46"
                />-->

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
